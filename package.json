{
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "alpinejs": "^3.14.9"
  },
  "scripts": {
    "build": "tailwindcss -i app/static/css/input.css -o app/static/css/style.css --minify",
    "watch": "tailwindcss -i app/static/css/input.css -o app/static/css/style.css --watch",
    "dev": "concurrently --names \"TailwindCSS,esbuild\" --prefix-colors \"blue,yellow\" \"tailwindcss -i app/static/css/input.css -o app/static/css/style.css --watch\" \"npx esbuild app/static/js/input.js --bundle --outfile=app/static/js/app.js --minify\""
  }
}
